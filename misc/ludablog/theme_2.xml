/*--------------------------------------------------------------
>>> Variable overriding
--------------------------------------------------------------*/

:root {
  --bg-color: #fff;
}

.dark {
  --bg-color: #000;
}

/*--------------------------------------------------------------
>>> Variable definitions
--------------------------------------------------------------*/
:root {
  --bg-color: #ffffff;
  --text-color: #777777;
  --action-text-color: #000000;
  --header-bg-color: #e2e8f0;
  --pre-bg-color: #e2e8f0;
  --heading-text-color: #555555;
  --accent: #FF9900;
}

.dark {
  --bg-color: #000000;
  --text-color: #e2e8f0;
  --action-text-color: #ffffff;
  --header-bg-color: #15171c;
  --pre-bg-color: #15171c;
  --heading-text-color: #e2e8f0;
}

/*--------------------------------------------------------------
>>> TABLE OF CONTENTS:
----------------------------------------------------------------
1.0 - Reset
2.0 - Typography
3.0 - Layout
4.0 - ELements
  4.1 - Theme Icon
  4.2 - Thumbnails
5.0 - Navigation
	5.1 - Links
	5.2 - Menus
6.0 - Accessibility
7.0 - Alignments
8.0 - Clearings
9.0 - Widgets
10.0 - Content
	10.1 - Posts and pages
	10.2 - Asides
	10.3 - Comments
	10.7 - Pagination
11.0 - Infinite scroll
12.0 - Media
13.0 - Footer
--------------------------------------------------------------*/

/*--------------------------------------------------------------
1.0 - Reset
--------------------------------------------------------------*/
*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  height: 100%;
  scroll-behavior: smooth;
}

body {
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

/*--------------------------------------------------------------
2.0 - Typography
--------------------------------------------------------------*/
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 700;
  color: var(--text-color);
  margin-bottom: 1rem;
}

p {
  margin-bottom: 1rem;
  color: var(--text-color);
  line-height: 1.6;
}

span {
  color: var(--text-color);
}

a {
  color: var(--accent);
  text-decoration: none;
}

html {
  font-family: system-ui, sans-serif;
}

/*--------------------------------------------------------------
3.0 - Layout
--------------------------------------------------------------*/
main {
  padding: 65px 0px 65px;
}

.container {
  max-width: 72rem;
  margin: 0 auto;
  padding: 0 1rem;
}

.grid {
  display: grid;
  gap: 1rem;
  grid-auto-flow: dense;
  grid-template-columns: repeat(auto-fit, minmax(min(100%, 20rem), 1fr));
}

.featured {
  grid-column: span 2;
}

.responsive-img {
  display: block;
  max-width: 100%;
  height: auto;
  border-radius: 0.5rem;
  /* opcional */
}

/*--------------------------------------------------------------
4.0 - Elements
--------------------------------------------------------------*/
/*--------------------------------------------------------------
4.1 - Theme Icon
--------------------------------------------------------------*/
.theme-toggle-btn {
  position: fixed;
  top: 10px;
  right: 20px;
  z-index: 2;
  border: 0;
  background: none;
  cursor: pointer;
  padding: 0;
  transition: background 0.2s;
}

.sun {
  fill: black;
}

.moon {
  fill: transparent;
}

.dark .sun {
  fill: transparent;
}

.dark .moon {
  fill: white;
}

/*--------------------------------------------------------------
4.2 - Thumbnails
--------------------------------------------------------------*/
.pbtthumbimg {
  display: block;
  max-width: 100%;
  height: auto;
  margin: 0.5em auto;
  padding: 4px;
  border: 1px solid #eee;
  background: var(--shadow-color);
  border-radius: 6px;
  box-shadow: 0 2px 8px #eee;
}


/*--------------------------------------------------------------
5.0 Navigation
--------------------------------------------------------------*/
nav {
    position: fixed;
    top: 0;
    width: 100%;
    background: var(--bg-color);
    z-index: 2;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 1rem 2rem;
  }

  .logo {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--text-color);
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu {
    display: flex;
    gap: 1.5rem;
  }

  .menu a {
    color: var(--text-color);
    text-decoration: none;
    position: relative;
    padding: 0.25rem 0;
    transition: color 0.3s;
  }

  /* Hover underline effect */
  .menu a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 2px;
    background: var(--accent, dodgerblue);
    transition: width 0.3s;
  }

  .menu a:hover::after,
  .menu a.active::after {
    width: 100%;
  }

  .menu a.active {
    color: var(--accent, dodgerblue);
    font-weight: 600;
  }

  /* Mobile */
  #menu-toggle {
    display: none;
  }

  .menu-icon {
    display: none;
    width: 30px;
    height: 22px;
    position: relative;
    cursor: pointer;
  }
  .menu-icon span {
    position: absolute;
    height: 3px;
    width: 100%;
    left: 0;
    background-color: var(--text-color);
    transition: 0.3s;
  }
  .menu-icon span:nth-child(1) {
    top: 0;
  }
  .menu-icon span:nth-child(2) {
    top: 9px;
  }
  .menu-icon span:nth-child(3) {
    bottom: 0;
  }

  @media (max-width: 768px) {
    nav {
      justify-content: space-between;
    }
    li {
      padding-left: var(--spacing);
      padding-bottom: calc(var(--spacing) / 3);
    }
    .menu {
      flex-direction: column;
      gap: 1rem;
      background: var(--bg-color);
      position: absolute;
      top: 65px;
      left: 0;
      width: 100%;
      padding: 1rem 2rem;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    #menu-toggle:checked ~ .menu {
      max-height: 300px; /* suficiente para mostrar todo */
    }

    .menu-icon {
      display: block;
    }

    #menu-toggle:checked + .menu-icon span:nth-child(1) {
      transform: rotate(45deg);
      top: 9px;
    }
    #menu-toggle:checked + .menu-icon span:nth-child(2) {
      opacity: 0;
    }
    #menu-toggle:checked + .menu-icon span:nth-child(3) {
      transform: rotate(-45deg);
      bottom: 9px;
    }
  }

/*--------------------------------------------------------------
>>> Extras
--------------------------------------------------------------*/
body {
  background: var(--bg-color);
  color: var(--text-color);
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

