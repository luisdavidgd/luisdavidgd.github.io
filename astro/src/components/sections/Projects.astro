---
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="projects-section">
  <div class="projects-container">
    {title && <h2 class="projects-title">{title}</h2>}

    <div class="projects-grid">
      {
        projects.map((p) => (
          <article class="project-card">
            <div class="project-icon" set:html={p.icon} />
            <h3 class="project-title">{p.title}</h3>
            <p class="project-tech">{p.techStack}</p>
            <p class="project-description">{p.description}</p>
            <div class="project-cta">
              <Button
                href={p.ctaLink}
                variant="primary"
                size="sm"
                target={p.ctaTarget}
              >
                {p.ctaText}
              </Button>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
<style>
  .projects-section {
    width: 100%;
    padding: 2.5rem 0; /* py-10 */
  }

  .projects-container {
    margin-left: auto;
    margin-right: auto;
    max-width: 72rem; /* max-w-6xl */
    padding-left: 1rem; /* px-4 */
    padding-right: 1rem;
  }

  .projects-title {
    font-size: 1.875rem; /* text-3xl */
    font-weight: 600; /* font-semibold */
    text-align: center;
    margin-bottom: 2rem; /* mb-8 */
  }

  @media (min-width: 768px) {
    .projects-title {
      font-size: 2.25rem; /* md:text-4xl */
    }
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem; /* gap-6 */
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr); /* md:grid-cols-2 */
    }
  }

  .project-card {
    position: relative;
    padding: 1.5rem; /* p-6 */
    background: var(--panel-color);
    border-radius: 0.75rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden; /* opcional si el icono es mÃ¡s grande */
  }

  .project-icon {
    position: absolute;
    top: 1rem; /* espacio desde arriba */
    right: 1rem; /* espacio desde la derecha */
    width: 48px;
    height: 48px;
    opacity: 0.9;
    transition:
      transform 0.2s ease,
      opacity 0.2s ease;
  }

  .project-icon > svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .project-card:hover {
    box-shadow: 0 8px 16px var(--shadow-color);
  }

  .project-card:hover .project-icon {
    transform: scale(1.1);
    opacity: 1;
  }

  .project-icon > svg {
    width: 1.5rem; /* w-6 */
    height: 1.5rem; /* h-6 */
    display: none; /* asegura que no tenga espacio extra */
  }

  .project-title {
    margin: 0;
    font-size: 1.25rem; /* text-xl */
    font-weight: 600;
    color: var(--text-color);
  }

  .project-tech {
    margin: 0;
    font-size: 0.875rem; /* text-sm */
    color: var(--color-text-muted);
  }

  .project-description {
    margin-top: 0.75rem; /* mt-3 */
    color: var(--color-text);
  }

  .project-cta {
    margin-top: 1.5rem; /* mt-6 */
    display: flex;
    justify-content: center;
  }
</style>
