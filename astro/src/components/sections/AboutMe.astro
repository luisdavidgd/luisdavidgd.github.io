<script is:client="load">
  const username = "luisdavidgd";
  const repoCountEl = document.getElementById("repoCount");
  const commitCountEl = document.getElementById("commitCount");
  const toggleBioBtn = document.getElementById("toggleBio");
  const extraBio = document.getElementById("extraBio");
  const openModalBtn = document.getElementById("openModal");
  const modalContainer = document.getElementById("modalContainer");

  async function fetchGitHubStats() {
    const cacheKey = "githubStats";
    const cacheTTL = 1000 * 60 * 60 * 6; // 6 horas en ms
    const cached = localStorage.getItem(cacheKey);

    if (cached) {
      const { timestamp, repos, totalCommits } = JSON.parse(cached);
      if (Date.now() - timestamp < cacheTTL) {
        repoCountEl.textContent = repos.length;
        commitCountEl.textContent = totalCommits;
        return; // usamos cache
      }
    }

    // si no hay cache v√°lido, pedimos de la API
    const perPage = 100;
    let totalCommits = 0;
    let repos = [];
    let page = 1;
    let hasMore = true;

    while (hasMore) {
      const res = await fetch(
        `https://api.github.com/users/${username}/repos?per_page=${perPage}&page=${page}`,
      );
      const data = await res.json();
      repos = repos.concat(data);
      hasMore = data.length === perPage;
      page++;
    }
    repoCountEl.textContent = repos.length;

    for (const repo of repos) {
      let pageCommits = 1;
      let moreCommits = true;
      while (moreCommits) {
        const res = await fetch(
          `https://api.github.com/repos/${username}/${repo.name}/commits?per_page=${perPage}&page=${pageCommits}`,
        );
        const commits = await res.json();
        totalCommits += Array.isArray(commits) ? commits.length : 0;
        moreCommits = Array.isArray(commits) && commits.length === perPage;
        pageCommits++;
      }
    }
    commitCountEl.textContent = totalCommits;

    // guardamos en cache
    localStorage.setItem(
      cacheKey,
      JSON.stringify({
        timestamp: Date.now(),
        repos,
        totalCommits,
      }),
    );
  }

  fetchGitHubStats();

  // Show more toggle
  toggleBioBtn.addEventListener("click", () => {
    if (extraBio.hidden) {
      extraBio.hidden = false;
      toggleBioBtn.textContent = "Show less";
    } else {
      extraBio.hidden = true;
      toggleBioBtn.textContent = "Show more";
    }
  });

  // Modal
  openModalBtn.addEventListener("click", () => {
    console.log("Open a Contact Modal.");
  });
</script>