---
import type { CollectionEntry } from "astro:content";
import SheetCard from "@components/ui/card/SheetCard.astro";

interface Props {
  sheets: CollectionEntry<"cheatsheets">[];
  title?: string;
}

const { sheets = [], title = "All Cheat Sheets" } = Astro.props as Props;
---

<section class="container">
  {title && <h2 class="title">{title}</h2>}
  <div class="grid">
    {sheets.map((sheet) => <SheetCard sheet={sheet} />)}
  </div>
</section>

<style>
  .title {
    font-size: 1.875rem; /* 3xl */
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .title {
      font-size: 2.25rem; /* 4xl */
    }
  }
</style>
