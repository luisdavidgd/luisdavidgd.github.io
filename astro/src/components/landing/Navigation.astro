---
import ThemeIcon from "@components/ThemeIcon.astro";
const logoText = "Luis Gallo";

const links = [
  { href: "/", text: "Home" },
  { href: "/portfolio", text: "Portfolio" },
  { href: "/about", text: "About" },
  { href: "/blog", text: "Blog" },
];

const currentPath = Astro.url.pathname;
---

<nav role="navigation">
  <input type="checkbox" id="menu-toggle" />
  <label for="menu-toggle" class="menu-icon" aria-label="Toggle Menu">
    <span></span>
    <span></span>
    <span></span>
  </label>

  <div class="logo">{logoText}</div>

  <ul class="menu">
    {
      links.map((link) => {
        const isActive =
          link.href === "/"
            ? currentPath === "/"
            : currentPath.startsWith(link.href);

        return (
          <li>
            <a href={link.href} class={isActive ? "active" : ""}>
              {link.text}
            </a>
          </li>
        );
      })
    }
  </ul>

  <ThemeIcon />
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    width: 100%;
    background: var(--bg-color);
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
  }

  .logo {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--text-color);
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu {
    display: flex;
    gap: 1.5rem;
  }

  .menu a {
    color: var(--text-color);
    text-decoration: none;
    position: relative;
    padding: 0.25rem 0;
    transition: color 0.3s;
  }

  /* Hover underline effect */
  .menu a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 2px;
    background: var(--accent, dodgerblue);
    transition: width 0.3s;
  }

  .menu a:hover::after,
  .menu a.active::after {
    width: 100%;
  }

  .menu a.active {
    color: var(--accent, dodgerblue);
    font-weight: 600;
  }

  /* Mobile */
  #menu-toggle {
    display: none;
  }

  .menu-icon {
    display: none;
    width: 30px;
    height: 22px;
    position: relative;
    cursor: pointer;
  }
  .menu-icon span {
    position: absolute;
    height: 3px;
    width: 100%;
    left: 0;
    background-color: var(--text-color);
    transition: 0.3s;
  }
  .menu-icon span:nth-child(1) {
    top: 0;
  }
  .menu-icon span:nth-child(2) {
    top: 9px;
  }
  .menu-icon span:nth-child(3) {
    bottom: 0;
  }

  @media (max-width: 768px) {
    li {
      padding-left: var(--spacing);
      padding-bottom: calc(var(--spacing) / 3);
    }
    .menu {
      flex-direction: column;
      gap: 1rem;
      background: var(--bg-color);
      position: absolute;
      top: 65px;
      left: 0;
      width: 100%;
      padding: 1rem 2rem;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    #menu-toggle:checked ~ .menu {
      max-height: 300px; /* suficiente para mostrar todo */
    }

    .menu-icon {
      display: block;
    }

    #menu-toggle:checked + .menu-icon span:nth-child(1) {
      transform: rotate(45deg);
      top: 9px;
    }
    #menu-toggle:checked + .menu-icon span:nth-child(2) {
      opacity: 0;
    }
    #menu-toggle:checked + .menu-icon span:nth-child(3) {
      transform: rotate(-45deg);
      bottom: 9px;
    }
  }
</style>
