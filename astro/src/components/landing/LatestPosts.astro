---
import PostCard from "@components/ui/card/PostCard.astro";

const { posts } = Astro.props;
---

<section class="container">
  <h2>Latest Posts</h2>
  <div class="grid">
    {posts.map((post: any) => <PostCard post={post} />)}
  </div>
</section>

<style>
  h2 {
    font-size: 1.875rem; /* 3xl */
    font-weight: 600;
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--foreground);
  }
</style>
