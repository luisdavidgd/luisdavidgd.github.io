---
import type { LogoItem } from '../../../data/logos';

interface Props { tools: LogoItem[]; speedMs?: number; }
const { tools = [], speedMs = 100000 } = Astro.props as Props;
---

<div class="carousel-container">
  <div class="carousel-mask">
    <div class="carousel-track" style={`animation: scroll ${speedMs}ms linear infinite`}>
      {[...tools, ...tools].map((tool) => (
        <div class="carousel-item">
          <div class="logo-box">
            <img src={tool.logo} alt={tool.name} width="40" height="40" />
          </div>
          <span>{tool.name}</span>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
.carousel-container {
  position: relative;
  z-index: 10;
  overflow: hidden;
  max-width: 100%;
  margin: 0 auto;
  padding: 1rem 2rem;
}

.carousel-mask {
  -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
}

.carousel-track {
  display: flex;
  will-change: transform;
  width: max-content;
  transform: translateX(0);
}

.carousel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1.5rem;
  margin: 0 1rem;
  min-width: 160px;
  border-radius: 0.5rem;
  transition: transform 0.3s;
}

.carousel-item:hover img {
  transform: scale(1.1);
  filter: none;
}

.logo-box {
  width: 40px;
  height: 40px;
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-box img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: transform 0.3s, filter 0.3s, opacity 0.3s;
  filter: grayscale(1);
  opacity: 0.8;
}

@media (prefers-color-scheme: dark) {
  .logo-box img {
    filter: invert(1) brightness(0) saturate(0);
  }
}

.carousel-item span {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--color-text-muted);
  transition: color 0.3s;
}

@keyframes scroll {
  0%   { transform: translateX(-20%); }
  100% { transform: translateX(-70%); }
}
</style>
