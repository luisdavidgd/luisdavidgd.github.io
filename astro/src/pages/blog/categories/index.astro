---
import { getCollection } from "astro:content";
import LandingPageLayout from "@layouts/LandingPage.astro";
const allPosts = await getCollection("blog");
const categories = [
  ...new Set(allPosts.map((post) => post.data.categories).flat()),
];
const pageTitle = "Category Index";
---

<LandingPageLayout pageTitle={pageTitle}>
  <div class="categories">
    {
      categories.map((category) => (
        <p class="category">
          <a href={`/blog/categories/${category}`}>{category}</a>
        </p>
      ))
    }
  </div>
</LandingPageLayout>
<style>
  a {
    color: #00539f;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
  }

  .category {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
