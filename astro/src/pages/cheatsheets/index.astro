---
import { getCollection } from "astro:content";
import LandingPageLayout from "@layouts/LandingPage.astro";
import BlogPost from "../../components/BlogPost.astro";

const pageTitle = "Cheat Sheets!!";
const allPosts = await getCollection("cheatsheets");
---
<LandingPageLayout pageTitle={pageTitle}>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={`/cheatsheets/${post.id}/`} title={post.data.title} />
      ))
    }
  </ul>
</LandingPageLayout>